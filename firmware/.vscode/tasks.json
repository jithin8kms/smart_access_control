{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build App",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": "build"
    },
    {
      "label": "Build Bootloader",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/bootloader"
      },
      "group": "build"
    },
    {
      "label": "Clean App",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": "none"
    },
    {
      "label": "Clean Bootloader",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}/bootloader"
      },
      "group": "none"
    },
    {
      "label": "Flash App",
      "type": "shell",
      "command": "st-flash",
      "args": [
        "write",
        "app/build/smart_access_control.bin",
        "0x08008000"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Flash Bootloader",
      "type": "shell",
      "command": "st-flash",
      "args": [
        "write",
        "bootloader/build/bootloader.bin",
        "0x08000000"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
}
